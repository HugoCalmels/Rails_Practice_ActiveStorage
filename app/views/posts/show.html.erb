<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<hr>
<% if @post.images.attached? %>
<% @post.images.each do |image| %>
<%= image_tag image, width: "200px" %>
<% end %>
<% end %>

<hr>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
